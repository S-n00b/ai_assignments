{
  "name": "AI Platform Development",
  "build": {
    "dockerfile": "Containerfile",
    "context": ".."
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "dockerDashComposeVersion": "v2",
      "installDockerBuildx": true
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11",
      "installJupyterlab": true
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest",
      "ppa": true
    }
  },
  "forwardPorts": [
    8000,  // API Gateway
    8080,  // FastAPI Platform
    7860,  // Gradio App
    5000,  // MLflow Tracking
    8081,  // ChromaDB
    7687,  // Neo4j Bolt
    7474,  // Neo4j Browser
    8082   // MkDocs
  ],
  "portsAttributes": {
    "8000": {
      "label": "API Gateway",
      "onAutoForward": "notify",
      "protocol": "https"
    },
    "8080": {
      "label": "FastAPI Platform",
      "onAutoForward": "silent"
    },
    "7860": {
      "label": "Gradio App",
      "onAutoForward": "silent"
    },
    "5000": {
      "label": "MLflow Tracking",
      "onAutoForward": "silent"
    },
    "8081": {
      "label": "ChromaDB",
      "onAutoForward": "silent"
    },
    "7687": {
      "label": "Neo4j Bolt",
      "onAutoForward": "silent"
    },
    "7474": {
      "label": "Neo4j Browser",
      "onAutoForward": "silent"
    },
    "8082": {
      "label": "MkDocs",
      "onAutoForward": "silent"
    }
  },
  "postCreateCommand": ".devcontainer/scripts/setup.sh",
  "postStartCommand": ".devcontainer/scripts/start-services.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker",
        "github.copilot",
        "github.copilot-chat",
        "eamodio.gitlens",
        "mhutchie.git-graph"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": true
        }
      }
    }
  },
  "remoteUser": "vscode",
  "containerEnv": {
    "PYTHONPATH": "/workspace",
    "ENVIRONMENT": "codespaces"
  },
  "mounts": [
    "source=${localWorkspaceFolder}/data,target=/workspace/data,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/logs,target=/workspace/logs,type=bind,consistency=cached"
  ],
  "runArgs": [
    "--privileged",
    "--cap-add=SYS_ADMIN",
    "--security-opt", "apparmor=unconfined"
  ]
}